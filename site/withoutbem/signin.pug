doctype html
html
  head
    title Sign in
    link(rel="stylesheet" href="fonts/fonts.css")
    link(rel="stylesheet" href="signin.scss")
    meta(charset="utf-8")
    
    
  
  body
    header
      img.logo(src="logoToxin.svg" alt="логотип Токсин")
      nav.menu
        a(href="") О нас
        a(href="" class="expandable") Услуги 
        a(href="") Вакансии
        a(href="") Новости
